<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeatBox" parent="Theme.AppCompat">
        <!-- Primary brand color. -->

        панель названия приложения
        <item name="colorPrimary">@color/red</item>

        панель состояния
        <item name="colorPrimaryVariant">@color/dark_red</item>

        текст, EditText
        <item name="colorOnPrimary">@color/gray</item>

        app background
        <!--overriding the item from "Platform.AppCompat" and we need to use prefix android:-->
        <item name="android:windowBackground">@color/shooting_blue</item>

        buttons' style
        <item name="buttonStyle">@style/BeatBoxButton</item>

        <!-- Secondary brand color. -->
        ползунок SeekBar
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        панель состояния
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


<!--    adding a new stile-->
<!--    extending "Widget.AppCompat.Button.Borderless" theme-->
    <style name="BeatBoxButton" parent = "Widget.AppCompat.Button.Borderless">

<!--        overriding the item from "Platform.AppCompat"
        setting a shape to the button
        button_beat_box - selector-->
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

<!--    new style which extends BeatBoxButton style-->
